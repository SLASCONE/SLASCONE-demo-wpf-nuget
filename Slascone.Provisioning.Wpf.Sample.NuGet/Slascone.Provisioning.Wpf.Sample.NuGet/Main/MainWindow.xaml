<Window x:Class="Slascone.Provisioning.Wpf.Sample.NuGet.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slascone.Provisioning.Wpf.Sample.NuGet"
        xmlns:main="clr-namespace:Slascone.Provisioning.Wpf.Sample.NuGet.Main"
        d:DataContext="{d:DesignInstance Type=main:MainViewModel}"
        mc:Ignorable="d"
        Title="SLASCONE provisioning WPF sample" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="OnClickExit"/>
            </MenuItem>
            <MenuItem Header="_Licensing">
                <MenuItem Header="_Manage License ..." Click="OnClickLicensing"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About ..." Click="OnClickAbout"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Label Content="{Binding LicensingState}"/>
            </StatusBarItem>
        </StatusBar>
        <Grid>

        </Grid>
    </DockPanel>
</Window>

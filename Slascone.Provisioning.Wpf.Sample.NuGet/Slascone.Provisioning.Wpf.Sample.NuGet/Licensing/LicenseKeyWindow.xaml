<Window x:Class="Slascone.Provisioning.Wpf.Sample.NuGet.Licensing.LicenseKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slascone.Provisioning.Wpf.Sample.NuGet.Licensing"
        mc:Ignorable="d"
        Title="LicenseKeyWindow" Height="280" Width="400">
    <StackPanel>
        <Label Margin="20 15 20 5">Please enter a License key</Label>
        <TextBox Name="LicenseKey" Margin="20 0 20 5"></TextBox>
        <DockPanel>
            <Button DockPanel.Dock="Right" Margin="5 5 20 0" Width="100" Click="OnClickCancel">Cancel</Button>
            <Button HorizontalAlignment="Right" Margin="20 5 5 0" Width="100" Click="OnClickOk">Ok</Button>
        </DockPanel>
        <Label Margin="20 15 20 5">or:</Label>
        <Button Margin="20 5 20 0" Click="OnClickDemoLicense">use the demo License key</Button>
    </StackPanel>
</Window>
